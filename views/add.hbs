<h1>Add course</h1>

<form action="/add" method="POST">
    <div class="input-field">
          <input name="title" id="title" type="text" class="validate" required>
          <label for="title">Course name</label>
          <span class="helper-text" data-error="Type course name" data-success="right"></span>
    </div>

    <div class="input-field">
          <input name="price" id="price" type="number" class="validate" required min="1">
          <label for="price">Course price</label>
          <span class="helper-text" data-error="Type course price" data-success="right"></span>
    </div>

    <div class="input-field">
          <input name="img" id="img" type="text" class="validate" required>
          <label for="img">URL image</label>
          <span class="helper-text" data-error="Type img url" data-success="right"></span>
    </div>

    <button class="btn btn-primary">Add course</button>
</form>