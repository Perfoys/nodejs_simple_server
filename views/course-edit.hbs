<h1>Update course {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
          <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
          <label for="title">Course name</label>
          <span class="helper-text" data-error="Type course name" data-success="right"></span>
    </div>

    <div class="input-field">
          <input name="price" id="price" type="number" class="validate" required min="1" value="{{course.price}}">
          <label for="price">Course price</label>
          <span class="helper-text" data-error="Type course price" data-success="right"></span>
    </div>

    <div class="input-field">
          <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
          <label for="img">URL image</label>
          <span class="helper-text" data-error="Type img url" data-success="right"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary">Update course</button>
</form>